library
    -- Modules included in this executable, other than Main.
    exposed-modules: Decoder
                   , Types
                   , Utils
                   , Loader
                   , Instructions
                   , Interpreter.Concrete.Register
                   , Interpreter.Concrete.Memory
                   , Interpreter.Concrete.Executor
                   , Interpreter.Logging.InstructionFetch
                   , Common.Coproduct

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    build-depends:
        base                   >= 4.15.0.0
        , array                ^>= 0.5.4.0
        , filepath             ^>= 1.4.100.0
        , singletons           ^>= 3.0.1
        , bytestring           ^>= 0.11.3.1
        , exceptions           ^>= 0.10.5
        , melf                 ^>= 1.1.0
        , free                 ^>= 5.1.9

    hs-source-dirs:   src
    default-language: Haskell2010

executable riscv-tiny
    main-is:              Main.hs
    hs-source-dirs:       app
    build-depends:        
        base >= 4.15.0.0 
        , optparse-applicative  >= 0.16.1 && <0.17
        , riscv-tiny >= 0.1.0.0
    
Test-Suite doctest
    type:                 exitcode-stdio-1.0
    default-language:     Haskell2010
    hs-source-dirs:       test
    main-is:              Main.hs
    build-depends:        base
                          , doctest
